{
  "name": "social-media",
  "version": "0.0.1",
  "private": true,
  "description": "A open source social media platform",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yannick1691/social-media.git"
  },
  "keywords": [
    "Social media",
    "preact",
    "graphql"
  ],
  "author": "Yannick Frisart & Thijs van Rijn",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/yannick1691/social-media/issues"
  },
  "homepage": "https://github.com/yannick1691/social-media#readme",
  "main": "index.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "eslint src",
    "test": "jest ./tests",
    "test-coverage": "jest ./tests --coverage",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "eslint": "^5.1.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-synacor": "^2.0.2",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-html": "^4.0.5",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-require-jsdoc-except": "^1.1.0",
    "eslint-plugin-security": "^1.4.0",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.4",
    "jest": "^25.0.0",
    "preact-cli": "^3.0.0",
    "preact-render-spy": "^1.3.0"
  },
  "dependencies": {
    "preact": "^8.2.9",
    "preact-compat": "^3.18.0",
    "preact-router": "^2.6.1",
    "snyk": "^1.88.2"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/src/tests/__mocks__/browserMocks.js"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^./style$": "identity-obj-proxy",
      "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "^create-react-class$": "preact-compat/lib/create-react-class",
      "^react-addons-css-transition-group$": "preact-css-transition-group"
    }
  },
  "snyk": true
}
